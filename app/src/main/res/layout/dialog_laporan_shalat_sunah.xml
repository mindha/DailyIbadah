<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        >
        <ImageView
            android:id="@+id/closeaja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/ic_clear_black_24dp"/>

        <TextView
            android:id="@+id/sholat_sunah"
            android:layout_width="match_parent"
            android:textColor="#616161"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="21dp"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_gravity="center_vertical"
            android:text="Shalat Sunnah"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="@string/waktu_shalat"/>

        <EditText
            android:id="@+id/waktu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="@string/jenis_shalat"/>

        <Spinner
            android:id="@+id/jenis_shalat"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        </Spinner>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:text="@string/tempat_shalat"/>

        <Spinner
            android:id="@+id/tempat_shalat"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        </Spinner>

        <Button
            android:id="@+id/simpan"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="SIMPAN"
            android:textColor="@android:color/white"/>

    </LinearLayout>

</RelativeLayout>